        <style>
            div{
                right:30px;
                border: 3px solid cyan;
            }
            div.absolute{
                position: absolute;
                top:50px;
                border:3px solid palegreen;
            }
            div.relative{
                position: relative;
                top:50px;
                border:3px solid pink;
            }
            div.fixed{
                position: fixed;
                top:0px;
                right:20px;
                width:300px;
                border:3px solid lightgreen;
            }
            div.sticky{
                position: sticky;
                top:1px;
                left:20px;
                width:100px;
                border:3px solid turquoise;
            }
        </style>

    </head>
    <body>
